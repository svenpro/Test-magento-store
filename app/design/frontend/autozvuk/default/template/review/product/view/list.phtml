<?php $_items = $this->getReviewsCollection()->getItems();?>
<section class="reviewes">
    <div class="top-buttons-wrapper">
        <button class="red-btn main-btn pull-left">Отзывы (10)</button>
        <button class="yelow-btn main-btn pull-right">Оставить отзыв</button>
    </div>

        <?php if (count($_items)):?>
            <?php echo $this->getChildHtml('toolbar') ?>

            <?php foreach ($_items as $_review):?>
                <div class="review-item" id="customer-reviews">
                    <div class="left-comment-side">
                        <a class="name" href="<?php echo $this->getReviewUrl($_review->getId()) ?>"><?php echo $this->__($this->escapeHtml($_review->getNickname())) ?></a>
                        <small class="when"><?php echo $this->__($this->formatDate($_review->getCreatedAt()), 'long') ?></small>
                        <p class="comment"><?php echo nl2br($this->escapeHtml($_review->getDetail())) ?></p>
                        <a href="#" class="more-link">Читать полностью</a>
                        <p class="goods"><span class="green-text">Достоинства: </span>хорошая батарея, и вообще неплохой смартфон</p>
                        <p class="bad"><span class="red-text">Недостатки: </span>не обнаружены</p>
                        <div class="bottom-buttons-wrapper">
                            <a href="#" class="reviews-link">1 ответ</a>
                            <a href="#" class="do-reviews">Ответить</a>
                        </div>
                        <div class="like-it">
                            <a href="#" class="dislike">5</a>
                            <a href="#" class="like">12</a>
                            <p>Был ли вам полезен этот отзыв:</p>
                        </div>
                    </div>
                    <dl class="right-comment-side">
                        <dd>
                            <?php $_votes = $_review->getRatingVotes(); ?>
                            <?php if (count($_votes)): ?>
                                <table class="ratings-table">
                                    <col width="1" />
                                    <col />
                                    <tbody>
                                    <?php foreach ($_votes as $_vote): ?>
                                        <tr>
                                            <th><?php echo $this->escapeHtml($_vote->getRatingCode()) ?></th>
                                            <td>
                                                <div class="rating-box">
                                                    <div class="rating" style="width:<?php echo $_vote->getPercent() ?>%;"></div>
                                                </div>
                                            </td>
                                        </tr>
                                    <?php endforeach; ?>
                                    </tbody>
                                </table>
                            <?php endif; ?>
                        </dd>
                    </dl>
                </div>
            <?php endforeach; ?>
            </div>
            <?php echo $this->getChildHtml('toolbar') ?>
        <?php endif;?>
        <?php echo $this->getChildHtml('review_form') ?>
    </div>
</section>