<?php if ($_products = $this->getRecentlyViewedProducts()): ?>
<section class="recent-viewed-products">
    <div class="second-title">
        <span><?php echo $this->__('Recently Viewed Products') ?></span>
    </div>
    <ol id="mini-products-list" class="owl-carousel">
    <?php foreach ($_products as $_item): ?>
        <li class="recent-item">
            <a href="<?php echo $this->getProductUrl($_item) ?>">
                <span class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(200, 200)->setWatermarkSize('30x10'); ?>" width="auto" height="200" alt="<?php echo $this->escapeHtml($this->getProductName()) ?>" /></span>
            </a>
            <div class="product-details">
                <p class="product-name">
                    <a href="<?php echo $this->getProductUrl($_item) ?>">
                        <?php echo $this->helper('catalog/output')->productAttribute($_item, $_item->getName() , 'name') ?>
                    </a>
                </p>
            </div>
            <div class="product-info-wrapper">
                <span class='available-prod pull-left'><?php echo $this->__('In stock') ?></span>
            </div>
            <span class="main-price"><?php echo $this->getPriceHtml($_item, true, '-related') ?></span>
            <button class="buy-btn pull-left"><?php echo $this->__('Buy') ?></button>
            <a href="#" class="compare">.</a>
            <div class="statistic-wrapper">
                <span><img src="images/stars.png" alt="stars"></span>
                <div class="comments stat-item">
                    <a href="#"><?php echo $this->__('3 review') ?></a>
                </div>
            </div>
        </li>
    <?php endforeach; ?>
    </ol>
    <script type="text/javascript">decorateList('recently-viewed-items');</script>
</section>
<?php endif; ?>
